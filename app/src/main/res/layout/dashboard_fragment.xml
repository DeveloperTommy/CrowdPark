<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/dashboard_fragment"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/prof_name"
        android:layout_width="wrap_content"
        android:textSize="40px"
        android:layout_height="80px"
        android:layout_gravity="center" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:id="@+id/zip_text"
        android:hint="Zip Code"
        android:layout_gravity="center" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:id="@+id/spaces_text"
        android:hint="Number of Spaces"
        android:layout_gravity="center" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:id="@+id/cost_text"
        android:hint="Cost per Space"
        android:layout_gravity="center" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:id="@+id/open_text"
        android:hint="Opening Time"
        android:layout_gravity="center" />

    <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:id="@+id/closing_text"
        android:hint="Closing Time"
        android:layout_gravity="center" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_of_parking"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dropdown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The parking space&apos;s long and lat are: "
        android:id="@+id/location_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Event to Nearby Location"
        android:id="@+id/event_button"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/tweet"
        android:layout_width="400px"
        android:layout_height="100px"
        android:layout_marginTop="10px"
        android:src="@drawable/tweet_button"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/signout"
        android:layout_width="400px"
        android:layout_height="100px"
        android:src="@drawable/signout_button"
        android:layout_gravity="center" />

    <ImageView
            android:id="@+id/prof_image"
            android:layout_width="30px"
            android:layout_height="30px"/>

</LinearLayout>